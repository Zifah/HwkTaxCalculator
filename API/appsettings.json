{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CharitySpendPercentage": 10,
  "Default": {
    "IncomeTax": {
      "Percentage": 10,
      "TaxFreeAmount": 1000,
      "MaximumTaxableAmount": null
    },
    "SocialContribution": {
      "Percentage": 15,
      "TaxFreeAmount": 1000,
      "MaximumTaxableAmount": 3000
    },
    "CharityDeductible": {
      "MaxPercentage": 10,
      // Potential improvement: Don't repeat "Default" since this is already a child of "Default"
      "ApplicableTaxes": [ "Default:IncomeTax", "Default:SocialContribution" ]
    }
  }
}
